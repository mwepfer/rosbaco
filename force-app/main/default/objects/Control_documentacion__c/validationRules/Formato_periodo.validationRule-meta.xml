<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Formato_periodo</fullName>
    <active>true</active>
    <errorConditionFormula>!REGEX(
Periodo_control_documentacion__c ,
&quot;^(\\d{2}\\-\\d{4})?$&quot;
)</errorConditionFormula>
